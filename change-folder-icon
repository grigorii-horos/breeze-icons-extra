#!/usr/bin/env bash

labels=(
  activities
  android
  appimage
  blender
  book
  bookmark
  build
  calculate
  chart
  cloud
  comic
  crash
  database
  decrypted
  design
  desktop
  development
  docker
  documents
  download
  drawing
  encrypted
  extension
  favorites
  flatpak
  games
  gdrive
  git
  godot
  html
  important
  java
  language
  library
  locked
  log
  mac
  mail
  network
  notes
  open
  paint
  pictures
  podcast
  presentation
  print
  publicshare
  root
  rpm
  script
  sign
  snap
  sound
  table
  tar
  temp
  templates
  text
  trash
  unlocked
  videos
  windows
  image-people
)

colors=(
  red
  orange
  yellow
  green
  teal
  cyan
  blue
  violet
  magenta
  darkgrey
  grey
)

if (( $# < 3 )); then
  echo Not enought arguments
  exit -1
fi

label=""
color=""

action="$1"
action_value="$2"

shift 2

for i in "$@"; do

  if [[ -f "${i}/.directory" ]]; then
    if grep -q "Icon=folder" "${i}/.directory" ; then
      iconString=$( grep "Icon=folder" "${i}/.directory" )

      for currColor in "${colors[@]}"; do
        if echo "$iconString" | grep -q -- "$currColor";then
          color="$currColor"
        fi
      done

      for currLabel in "${labels[@]}"; do
        if echo "$iconString" | grep -q -- "$currLabel";then
          label="$currLabel"
        fi
      done

    fi
  fi

  if [[ "$action" == "label" ]]; then
    label="$action_value"
  fi

  if [[ "$action" == "color" ]]; then
    color="$action_value"
  fi

  iconString="folder"

  if [[ ! -z "$color" ]]; then
    iconString+="-$color"
  fi

  if [[ ! -z "$label" ]]; then
    iconString+="-$label"
  fi

  echo $label $color $iconString
  echo "${i}/.directory"
  if [[ ! -f "${i}/.directory" ]]; then
    echo -n "" > "${i}/.directory"
    echo "[Desktop Entry]" >> "${i}/.directory"
    echo "Icon=$iconString" >> "${i}/.directory"
  else
    FILE="${i}/.directory"
    FIND=`grep -e "Icon=.*" "$FILE"`

    if [ "$FIND" != "" ]; then
      sed "s/#*Icon=.*/Icon=$iconString/g" "$FILE" > "/tmp/$$" && cat "/tmp/$$" > "$FILE"
    else
      FIND=`grep -e "\[Desktop Entry\]" "$FILE"`

      if [ "$FIND" != "" ]; then
        sed "s/#*\[Desktop Entry\]/\[Desktop Entry\]\nIcon=$iconString/g" "$FILE" > "/tmp/$$" && mv "/tmp/$$" "$FILE"
      else
        echo >> "$FILE"
        echo "[Desktop Entry]" >> "$FILE"
        echo "Icon=$iconString" >> "$FILE"
      fi
    fi
  fi
done
